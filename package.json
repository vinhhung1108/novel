{
  "name": "novelsite-monorepo",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier -w .",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^20.12.14",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.14",
    "turbo": "^2.1.0",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "packageExtensions": {
      "next@*": {
        "peerDependencies": {
          "react": "*",
          "react-dom": "*"
        }
      }
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
