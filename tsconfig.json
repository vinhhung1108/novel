{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@novels/shared": ["packages/shared/src"],
      "@novels/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
